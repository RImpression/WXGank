.stv-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.withAnimate {
  transition: all 100ms ease;
  -webkit-transform: translate3d(0, 0, 0);
  -moz-transform: translate3d(0, 0, 0);
  -ms-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
  -webkit-backface-visibility: hidden;
  -moz-backface-visibility: hidden;
  -ms-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-perspective: 1000;
  -moz-perspective: 1000;
  -ms-perspective: 1000;
  perspective: 1000;
}
.stv-container .tab-bar {
  position: relative;
  display: flex;
  font-size: 30rpx;
  color: #DEE7EF;
}
.stv-container .tab-bar .tab-active {
  color: #FFFFFF;
}
.stv-container .tab-bar .tab {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 16rpx;
  padding-bottom: 20rpx;
}
.stv-container .tab-bar .under-line {
  position: absolute;
  bottom: 0;
  height: 6rpx;
  background-color: #FFFFFF;
}
.tab-bar {
  background-color: #4c4c4c 
}
.stv-container .scroll-view {
  position: relative;
  width: 100%;
  height: 100%;
  background: #FFFFFF;
}
.stv-container .scroll-view .scroll-view-wrapper {
  position: absolute;
  top: 0;
  bottom: 0;
  display: flex;
}
.stv-container .scroll-view .scroll-view-wrapper .one-scene {
  height: 100%;
}
.one-scene text {
  display: flex;
}
.item-view {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.item-info {
  display: flex;
  padding-top: 20rpx;
  flex-direction: row;
  justify-content: space-between
}
.item-line {
  height: 1px;
  width: 100%;
  background: #eee
}
.item-list {
  display: flex;
  flex-direction: column;
}
.text-desc {
  display: -webkit-box;
  font-size: 30rpx;
  -webkit-line-clamp:2;
  line-height: 45rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  color: #333;
}
.text-info {
  font-size: 10pt;
  color: #666
}
.tab-inactive{
  color: #f5f5f5
}